<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!-- ==================================================================================== -->
  <!-- ==================================================================================== -->

  <artifactId>weblogic-integration-test-example</artifactId>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.oracle.weblogic.demo.maven</groupId>
  <packaging>war</packaging>
  <version>12.1.3.0.0</version>
  <name>weblogic-integration-test-example</name>


  <!-- ==================================================================================== -->
    <ciManagement>
        <system>hudson</system>
        <url>http://localhost:8080/job/weblogic-integration-test-example/</url>
    </ciManagement>
    <properties>
    <weblogic.examples.svn.url>https://svn.java.net/svn/weblogic-examples~weblogic-12c-user-examples
    </weblogic.examples.svn.url>
    <maven.build.timestamp.format>yyyyMMdd.HHmm</maven.build.timestamp.format>
  </properties>

  <!-- ==================================================================================== -->

  <profiles>

  </profiles>
  <!-- ======================================================== -->

  <build>
    <defaultGoal>install</defaultGoal>

    <plugins>
      <!--
        This plugin sets the source and target language levels to Java 1.6
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>

        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.11</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.oracle.weblogic</groupId>
        <artifactId>weblogic-maven-plugin</artifactId>

        <executions>
          <execution>
            <id>WLS_SETUP</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>install</goal>
              <goal>create-domain</goal>
              <goal>start-server</goal>
              <goal>wlst</goal>
              <goal>deploy</goal>
            </goals>

            <configuration>
              <fileName>src/main/wlst/createDatasource.py</fileName>
            </configuration>
          </execution>

          <execution>
            <id>WLS_TEARDOWN</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>undeploy</goal>
              <goal>stop-server</goal>
              <goal>remove-domain</goal>
              <goal>uninstall</goal>
            </goals>
          </execution>
        </executions>

        <configuration>
          <user>weblogic</user>
          <password>welcome1</password>
          <name>${project.build.finalName}</name>
          <artifactLocation>com.oracle.weblogic:wls-dev:zip:12.1.3.0</artifactLocation>
          <installDir>${project.build.directory}/software</installDir>
          <middlewareHome>${project.build.directory}/software/wls12130</middlewareHome>
          <domainHome>${project.build.directory}/base_domain</domainHome>
	  <source>${project.build.directory}/${project.build.finalName}</source>
        </configuration>
      </plugin>
    </plugins>

  </build>

  <!-- ==================================================================================== -->

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.11</version>
        <reportSets>
          <reportSet>
            <id>integration-tests</id>
            <reports>
              <report>failsafe-report-only</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
  <dependencies>

    <!-- ==================================================================================== -->

    <!-- This makes the JAVA EE 6 API available for all chile projects,
which is all projects in this app -->
    <dependency>
      <groupId>com.oracle.weblogic</groupId>
      <artifactId>javax.servlet_2.2.0.0_3-0</artifactId>
      <version>12.1.3-0-0</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <version>6.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

</project>
