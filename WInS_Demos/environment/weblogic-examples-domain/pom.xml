  <profiles>
    <profile>
      <id>create-domain</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>

          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>wls-maven-plugin</artifactId>

            <configuration>
              <user>weblogic</user>
              <password>welcome1</password>
              <name>${project.build.finalName}</name>
            </configuration>

            <executions>
              <execution>
                <id>configure</id>
                <phase>install</phase>

                <goals>
                  <goal>wlst</goal>
                </goals>

                <configuration>
                  <middlewareHome>${middleware.home}</middlewareHome>
                  <weblogicHome>${weblogic.home}</weblogicHome>
                  <debug>true</debug>
                  <fileName>${project.basedir}/src/main/wlst/create-${project.name}.py</fileName>
                  <propertiesFile>${project.basedir}/../environment.properties</propertiesFile>
                  <args>-Dweblogic.security.SSL.ignoreHostnameVerification=true -Djava.security.egd=file:/dev/./urandom -Dweblogic.security.TrustKeyStore=DemoTrust -skipWLSModuleScanning
                  </args>

                </configuration>

              </execution>
            </executions>
          </plugin>

	<plugin>
	    <artifactId>maven-antrun-plugin</artifactId>
	    <executions>
	      <execution>
		<id>replace-nm-prop</id>
		<phase>install</phase>
		<configuration>
		  <tasks>
		    <replace token= "SecureListener=true" value="SecureListener=false" dir="${middleware.home}/user_projects/domains/${project.name}/nodemanager">                                 
		      <include name="**/*.properties"/>
		    </replace>
		  </tasks>
		</configuration>
		<goals>
		  <goal>run</goal>
		</goals>
	      </execution>
	    </executions>
	  </plugin>
        </plugins>
      </build>

    </profile>

     <profile>
      <id>start-nm</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
          <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-antrun-plugin</artifactId>
	    <executions>
	      <execution>  
	        <id>start-nm</id>  
		<phase>install</phase>  
		<configuration>  
		  <tasks>  
		    <exec dir="${middleware.home}/user_projects/domains/${project.name}/bin"
			  executable="${middleware.home}/user_projects/domains/${project.name}/bin/startNodeManager.sh"		            
		          spawn="true">  
		      <env key="JAVA_OPTIONS" value="-Djava.security.egd=file:/dev/./urandom"/>		    
		    </exec>  
		  </tasks>  
		</configuration>  
		<goals>  
		  <goal>run</goal>  
		</goals>  
	      </execution>  
	    </executions>
	  </plugin>
        </plugins>
      </build>
    </profile>     

     <profile>
      <id>stop-nm</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
          <plugin>

	    <artifactId>maven-antrun-plugin</artifactId>
	    <executions>
	      <execution>  
	        <id>stop-nm</id>  
		<phase>install</phase>  
		<configuration>  
		  <tasks>  
		    <exec dir="${middleware.home}/user_projects/domains/${project.name}/bin"
			  executable="${middleware.home}/user_projects/domains/${project.name}/bin/stopNodeManager.sh"		            
		          spawn="true">  
		    </exec> 
		  </tasks>  
		</configuration>  
		<goals>  
		  <goal>run</goal>  
		</goals>  
	      </execution>  
	    </executions>
	  </plugin>
        </plugins>
      </build>
    </profile>

