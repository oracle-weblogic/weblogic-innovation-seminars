    </profile>
<profile>
      <id>clean-up</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>

          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>weblogic-maven-plugin</artifactId>

            <configuration>
              <user>weblogic</user>
              <password>welcome1</password>
              <name>${project.build.finalName}</name>
            </configuration>

            <executions>
              <execution>
                <id>configure</id>
                <phase>install</phase>

                <goals>
                  <goal>wlst</goal>
                </goals>

                <configuration>
                  <middlewareHome>${middleware.home}</middlewareHome>
                  <weblogicHome>${weblogic.home}</weblogicHome>


                  <fileName>${env.DEMOS_HOME}/grid-archive-examples/src/main/wlst/clean-configuration.py</fileName>
                 <!-- <propertiesFile>${project.basedir}/src/main/wlst/environment.properties</propertiesFile> -->

                </configuration>

              </execution>
            </executions>
          </plugin>
          <plugin>
	    <artifactId>maven-antrun-plugin</artifactId>
	    <executions>
	      <execution>  
	        <id>stop-nm</id>  
		<phase>install</phase>  
		<configuration>  
		  <tasks>  
		    <exec dir="${env.DEMOS_HOME}/grid-archive-examples/Oracle/Domains/mydomain/bin"
			  executable="${env.DEMOS_HOME}/grid-archive-examples/Oracle/Domains/mydomain/bin/stopNodeManager.sh"		            
		          spawn="true">  
		    </exec>  
		  </tasks>  
		</configuration>  
		<goals>  
		  <goal>run</goal>  
		</goals>  
	      </execution>  
	    </executions>
	  </plugin>

        </plugins>
      </build>

    </profile>
</profiles>
